<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

<listener>
<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

<servlet>
<servlet-name>singleServelet</servlet-name>
<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
<init-param>
<param-name>contextConfigLocation</param-name>
<param-value>/WEB-INF/applicationContext.xml</param-value>
</init-param>
<load-on-startup>1</load-on-startup>
</servlet>
<!-- 拦截所有*.do的请求交给singleServelet处理，其他的交给默认的servelet处理 -->
<servlet-mapping>
<servlet-name>singleServelet</servlet-name>
<url-pattern>*.do</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Log4JInitServlet</servlet-name>
<servlet-class>com.yanghao.log.TransactionLog</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>Log4JInitServlet</servlet-name>
<url-pattern>/environment/login.do</url-pattern>
</servlet-mapping>

<listener>  
      <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>  
</listener>


<context-param>
<param-name>log4jConfigLocation</param-name>
<param-value>/log4j.properties</param-value>
</context-param>


 <display-name>environment</display-name>
  <welcome-file-list>
  	<welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>